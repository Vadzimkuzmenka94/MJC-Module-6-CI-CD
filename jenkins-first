pipeline {
  agent any
  triggers {
    pollSCM('*/5 * * * *')
  }
  stages{
    stage('Clean'){
    steps {
     sh "./gradlew clean"
    }
  }
    stage('Build'){
      steps {
       sh "./gradlew Build"
      }
    }
     stage('War'){
        steps {
         sh "./gradlew War"
        }
      }
      }
      }
